<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.bnotya.bnotyaapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <receiver
            android:name="com.bnotya.bnotyaapp.services.AlarmReceiver"
            android:enabled="false">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />                
            </intent-filter>
        </receiver>

        <!-- Splash activity -->
        <activity
            android:name="com.bnotya.bnotyaapp.SplashActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Main activity -->
        <activity
            android:name="com.bnotya.bnotyaapp.MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask"
            android:parentActivityName="com.bnotya.bnotyaapp.SplashActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bnotya.bnotyaapp.SplashActivity" />

            <intent-filter>
                <action android:name="com.bnotya.bnotyaapp.MainActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!-- Trivia  activity -->
        <activity
            android:name="com.bnotya.bnotyaapp.TriviaActivity"
            android:label="@string/app_name"
            android:parentActivityName="com.bnotya.bnotyaapp.MainWomenActivity" >
            <intent-filter>
                <action android:name="com.bnotya.bnotyaapp.TriviaActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bnotya.bnotyaapp.MainWomenActivity" />
        </activity>

        <!-- Women List activity -->
        <activity
            android:name="com.bnotya.bnotyaapp.WomenListActivity"
            android:configChanges="keyboardHidden|orientation|screenSize"
            android:label="@string/app_name"
            android:parentActivityName="com.bnotya.bnotyaapp.MainWomenActivity" >
            <intent-filter>
                <action android:name="com.bnotya.bnotyaapp.WomenListActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bnotya.bnotyaapp.MainWomenActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <!-- Card Flip activity -->
        <activity
            android:name="com.bnotya.bnotyaapp.CardFlipActivity"
            android:label="@string/title_card_flip"
            android:parentActivityName="com.bnotya.bnotyaapp.WomenListActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.bnotya.bnotyaapp.CardFlipActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.bnotya.bnotyaapp.WomenListActivity" />
        </activity>

        <!-- Search activity -->
        <activity android:name="com.bnotya.bnotyaapp.SearchResultsActivity" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>

        <!-- Preferences activity -->
        <activity
            android:name="com.bnotya.bnotyaapp.Preferences"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.bnotya.bnotyaapp.Preferences" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>